<h2>Update the drone</h2>


{{#with drone}}

<form method="post" action="/drones/{{_id}}/edit">

    <label>
        Name: <input type="text" name="name" value="{{name}}"/>
    </label>

    </br>
    </br>

    <label>
        Propellers: <input type="number" name="propellers" value="{{propellers}}" />
    </label>

    </br>
    </br>

    <label>
        Speed: <input type="number" name="maxSpeed" value="{{maxSpeed}}" />
    </label>

    <button type="submit" name="create">Update Drone</button>
    
</form>

{{/with}}